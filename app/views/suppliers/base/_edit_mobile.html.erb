<div class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" id="edit-mobile-form">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="gridSystemModalLabel">新的手机号</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="alert-danger mb20" role="alert" style='display:none;'></div>
            <%= form_for current_supplier, url: suppliers_user_path(current_supplier), :html => { :id => "update_mobile_form" } do |f| %>
              <p>
                <%= f.text_field :mobile, class: "form-control" %>
              </p>
              <br>
              <p class='text-right'>
                <%= f.submit "提交", class: "btn btn-primary", id: 'UpdateSupplierMobile' %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :scripts do %>
  <%= javascript_include_tag "suppliers/mobile_validation", 'data-turbolinks-track' => true %>
<% end %>
