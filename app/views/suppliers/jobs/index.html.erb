<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>标题</th>
        <th>入职红包</th>
        <th>简历红包</th>
        <th>发布时间</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, job, :target => "_blank" %></td>
          <td><%= job.bonus_for_entry %>元</td>
          <td>简历被查看可获得红包<%= job.resumes_bonus_for(current_supplier) %>元</td>
          <td><%= job.created_at.localtime.to_date.to_s(:db) %></td>
          <td>已推荐简历<%= job.resumes_count_from(current_supplier) %>份</td>
          <td><%= link_to "为他推荐", job, class: "btn btn-primary active", role: "button", :target => "_blank" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
