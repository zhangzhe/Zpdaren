<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>标题</th>
        <th>公司</th>
        <th>红包</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, job, :target => "_blank" %></td>
          <td><%= job.company_name %></td>
          <td><%= job.bonus %></td>
          <td><%= job.created_at %></td>
          <td><%= link_to "为他推荐", job, class: "btn btn-primary active", role: "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
