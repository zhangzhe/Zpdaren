<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>被推荐人</th>
        <th>推荐时间</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= link_to truncate(delivery.job_title), suppliers_job_path(delivery.job), :target => "_blank" %></td>
          <td><%= delivery.candidate_name %></td>
          <td><%= delivery.created_at.localtime.to_date.to_s(:db) %></td>
          <td>
            <p>
              <%= Suppliers::DeliveriesHelper.state_show(delivery) %>
              <% if delivery.refused? && delivery.refuse_reason %>
                <a class="resumesForJob" tabindex="0" data-placement="bottom" role="button" data-toggle="popover" data-trigger="focus" data-content="<%= delivery.refuse_reason.content %>" title="">原因</a>
              <% end %>
            </p>
            <p>
              <%= delivery.viewed_at.strftime("%Y-%m-%d %H:%m") if delivery.viewed? && delivery.viewed_at %>
            </p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>