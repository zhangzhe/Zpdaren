<ol class="breadcrumb">
  <li><%= link_to "职位列表", admins_jobs_path(:state => "in_hiring") %></li>
  <li><%= link_to "为【#{@job.company_name}--#{@job.title}】推荐", admins_deliveries_path(:job_id => @job.id) %></li>
</ol>

<div class="col-md-5">
  <H2>
    <%= @job.title %>
  </H2 >
  <p>
    <i class="fa fa-tags"></i>
    <%= @job.tag_list.each{|tag|}.join(' ') %>
  </p>
  <p>
    <%= simple_format  @job.description %>
  </p>
</div>
<div class="col-md-5 col-md-offset-1">
  <H2>
    <%= @resume.candidate_name %>
  </H2 >
  <p>
    <i class="fa fa-tags"></i>
    <%= @job.tag_list.each{|tag|}.join(' ') %>
  </p>
  <p>
    <%= simple_format @resume.description %>
  </p>
</div>
<div class="col-md-10">
</div>
<div class="col-md-6">
  <hr>
  <%= form_for @delivery, url: suppliers_deliveries_path, method: 'POST' do |f| %>
    <%= hidden_field_tag 'delivery[job_id]', params[:job_id] %>
    <%= hidden_field_tag 'delivery[resume_id]', params[:resume_id] %>
    <p>
      <%= f.text_area :message, class: "form-control", placeholder: "候选人简介", rows: 2 %>
    </p>
    <p>
      <%= f.submit "确认", class: "btn btn-primary", data: { disable_with: '提交中...' } %>
    </p>
  <% end %>
</div>
