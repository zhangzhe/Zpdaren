<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>被推荐人</th>
        <th>标签</th>
        <th>简历原件</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.candidate_name %></td>
          <td><%= resume.tag_list %></td>
          <td><%= link_to resume.attachment.file.file.split('/')[-1], original_resume_download_admins_resume_path(resume[:id]) %></td>
          <td>
            <% if resume.deliveried?(@job) %>
              已推荐
            <% else %>
              <%= link_to '推荐', suppliers_deliveries_path(delivery: { job_id: params[:job_id], resume_id: resume.id }), method: :post, class: 'btn btn-primary active' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>