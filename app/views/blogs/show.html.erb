<% content_for :title, @blog.title %>
<% content_for :job_info do %>
  <%= render 'shared/page_title', title: @blog.title %>
  <div style="word-break:break-all;">
    <p>
     <%= @blog.content.html_safe %>
    </p>
  </div>
<% end %>

<% content_for :other_job_info do %>
  <p>
    <div class="sidebar-module sidebar-module-inset">
      <h2 class='self-h2'><%= link_to "众聘达人", root_path %></h2>
      <h3>
        推荐优质简历
      </h3>
      <h3>
        获得企业悬赏
      </h3>
      <br>
      <%= link_to "我要红包", Job, class: "btn btn-danger" %>
    </div>
    <hr>
    <h4>更多文章</h4>
    <ol class="list-unstyled">
      <% Blog.all.each do |blog| %>
        <li><%= link_to blog.title, blog %></li>
      <% end %>
    </ol>
  </p>

  <% if current_admin %>
    <%= link_to "修改本篇", edit_admins_blog_path(@blog), class: "btn btn-primary" %>
    &nbsp;
    <%= link_to "返回博客列表", admins_blogs_path, class: "btn btn-primary" %>
  <% end %>
<% end %>
