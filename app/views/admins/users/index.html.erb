<%= render '/shared/search', title: '用户列表', url: admins_users_path, placeholder: '邮箱', search_fields: 'email_cont', q: @q %>
<br>
<%= render 'nav_tabs', users: @users %>
<br>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>邮箱</th>
        <th>登录数量</th>
        <th>角色</th>
        <th>微信关注</th>
        <th>注册时间</th>
        <th>最后一次登录时间</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.sign_in_count %></td>
        <td><%= user.type %></td>
        <td><%= user.weixin ? "已关注" : "未关注" %></td>
        <td><%= user.created_at.localtime.to_s(:db) %></td>
        <td><%= user.current_sign_in_at? ? user.current_sign_in_at.localtime.to_s(:db) : '未曾登录过' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/paginate', objs: @users %>
