<ul class="nav nav-tabs">
  <% active = (params[:type] == "Recruiter") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '招聘方', admins_users_path(:type => "Recruiter") %>
  </li>
  <% active = (params[:type] == "Supplier") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '推荐方', admins_users_path(:type => "Supplier") %>
  </li>
  <% active = params[:type].nil? ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '所有用户', admins_users_path() %>
  </li>
</ul>
<br>

<% if params[:type] == 'Recruiter' %>
  <%= render 'companies', companies: @companies %>
<% elsif params[:type] == 'Supplier' %>
  <%= render 'suppliers', suppliers: @suppliers %>
<% else %>
  <%= render 'users', users: @users %>
<% end %>
<%= render 'shared/paginate', objs: @companies || @suppliers || @users %>
