<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= bootstrap_flash %>
      <% flash[:error], flash[:success] = nil, nil %>
      <table class="table">
        <thead>
          <tr>
            <th>邮箱</th>
            <th>登录数量</th>
            <th>角色</th>
            <th>微信关注</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.sign_in_count %></td>
            <td><%= user.type %></td>
            <td><%= user.weixin ? "已关注" : "未关注" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div><!--/row-->
</div> <!-- /container -->
