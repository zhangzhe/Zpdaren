<%= render 'admins/shared/search', title: '简历列表', url: admins_resumes_path, placeholder: '输入简历标签' %>

<ul class="nav nav-tabs">
  <% active = (params[:state] == "uncompleted") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '待完善', admins_resumes_path(:state => "uncompleted") %>
  </li>
  <% active = (params[:state] == "completed") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '已完善', admins_resumes_path(:state => "completed") %>
  </li>
  <% active = (params[:state] == "available") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '（已完善）求职中', admins_resumes_path(:state => "available") %>
  </li>
  <% active = (params[:state] == "unavailable") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to '（已完善）暂时不找工作', admins_resumes_path(:state => "unavailable") %>
  </li>
</ul>
<br>
<%= render 'list', resumes: @resumes %>
<%= render 'shared/paginate', objs: @resumes %>
