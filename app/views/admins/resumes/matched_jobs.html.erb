<br>
<%= render 'shared/page_title', title: "匹配的职位" %>
<div class="col-md-6">
  <%= render 'shared/page_title', title: '简历' %>
  <h2>
    <%= @resume.candidate_name %>
  </h2 >
  <p>
    <%= @resume.mobile %>
  </p >
  <p>
    <% @resume.tag_list.each do |tag| %>
      <i class="fa fa-tags"></i>
      <span class='gray-light'><%= tag %></span>
    <% end %>
  </p>
  <p class='blockquote14'>
    <strong>
      简历描述
    </strong>
  </p>
  <p>
    <%= render 'shared/resume_show', resume: @resume, pdf_url: pdf_download_admins_resume_path(@resume), default: 'prompt' %>
  </p>
  <p>
    <%= sanitize("<strong>备注：</strong>#{@resume.remark}") if @resume.remark.present? %>
  </p>
</div>

<div class="col-md-6">
  <%= render 'shared/page_title', title: '职位' %>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <%= render partial: "job", collection: @matched_jobs %>
  </div>
</div>

