<br>
<ol class="breadcrumb">
  <li><%= link_to "用户列表", admins_users_path(type: "Recruiter") %></li>
  <li><%= link_to "招聘方", admins_users_path(type: "Recruiter") %></li>
  <li><%= @company.name %></li>
</ol>
<div>
  <%= render 'shared/page_title', title: @company.name %>
  <%= image_tag 'company_certificate_128.png', class: 'company_certificate' if @company.service_protocol? %>
  <p class='gray-light'>联系方式：<%= @company.mobile %></p>
  <p class='gray-light'>公司网址：<%= @company.url? ? link_to(@company.url, external_url(@company.url), target: '_blank') : '暂未提供' %></p>
  <p class='blockquote14'>
    <strong>
      公司描述
    </strong>
  </p>
  <p>
    <div class='gray-light'>
      <%= simple_format @company.description %>
    </div>
  </p>
  <p class='blockquote14'>
    <strong>
      企业服务协议
    </strong>
  </p>
  <p>
    <%= render 'shared/protocol_show', company: @company, url: service_protocol_admins_company_path(@company) %>
  </p>
  <p class='gray-light'>地址：<%= @company.address? ? @company.address : '暂未提供' %></p>
</div>
<%= link_to '编辑', edit_admins_company_path(@company), class: 'btn btn-primary' %>
<%= button_to '删除', admins_user_path(@company.recruiter), method: :delete, data: { confirm: "是否删除招聘方#{@company.name}？", disable_with: '提交中...'}, class: "btn btn-danger" %>
