<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>公司名称</th>
        <th>公司描述</th>
        <th>创建时间</th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= link_to company.name, admins_company_path(company.id) %></td>
          <td><%= truncate(company.description, length: 30) %></td>
          <td><%= company.created_at.localtime.to_s(:db) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>