<% url = params[:action] == "new" ? admins_blogs_path : admins_blog_path %>
<%= form_for blog, url: url do |f|  %>
  <p>
    <%= f.text_field :title, class: "form-control", placeholder: '博客标题' %>
  </p>
  <p>
    <%= f.text_area :content, class: "form-control", rows: 40 %>
  </p>
  <p>
    <%= f.submit "发布", class: "btn btn-primary", data: { disable_with: '提交中...' } %>
  </p>
<% end %>


<%= content_for :scripts do %>
  <%= javascript_include_tag 'froala_editor', 'data-turbolinks-track' => true %>
  <script>
      $(function() {
          $('#blog_content').froalaEditor({
            heightMin: 300,
            placeholderText: '博客内容'
          }
          )
      });
  </script>
<% end %>
<%= content_for :styles do %>
  <%= stylesheet_link_tag "froala_editor" %>
<% end %>


