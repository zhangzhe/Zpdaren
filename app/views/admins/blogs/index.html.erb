<%= render 'shared/page_title', title: "博客管理" %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>博客标题</th>
        <th>发布时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>

          <td><%= link_to blog.title, blog %></td>
          <td><%= blog.created_at.localtime.to_date.to_s(:db) %></td>
          <td>
            <%= link_to '修改', edit_admins_blog_path(blog), class: "btn btn-primary btn-sm" %>
            <%= link_to '删除', admins_blog_path(blog), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: '确认?' } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to '新建博客', new_admins_blog_path, class: "btn btn-primary" %>
