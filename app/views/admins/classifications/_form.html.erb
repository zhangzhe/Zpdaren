<%= form_for classification, url: url, remote: true do |f|  %>
  <%= render "shared/error_messages", target: classification %>
  <%= f.hidden_field :parent_id, value: params.try(:[], :parent_id) || params.try(:[], :classification).try(:[], :parent_id) %>
  <p>
    <%= f.label :name, '分类名称' %>
    <span class='red-star'>*</span>
    <%= f.text_field :name, class: "form-control" %>
  </p>
  <p>
    <%= f.submit "创建", class: "btn btn-primary", data: { disable_with: '提交中...' } %>
  </p>
<% end %>