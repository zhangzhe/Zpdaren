<% if @classification.errors.blank? %>
  // 用 Ajax 载入当前页面，找到下拉框的 Dom 的新 HTML，再替换目前页面的下拉框 Dom
  var selector = '.classification-list';
  $.get(location.href, function(html) {
    var doc = $(html).find(selector);
    $(selector).replaceWith(doc);
  });
  bootbox.hideAll();
<% else %>
  var html = "<%= j(render('form', remote: true, classification: @classification, url: admins_classifications_path)) %>";
  $('form.new_classification').replaceWith(html);
<% end %>