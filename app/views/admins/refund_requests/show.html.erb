<p class="lead"><%= @refund_request.job_title %></p>
<p><%= simple_format @refund_request.job_description %></p>
<hr>
<h2>退款：</h2>
<p><%= @refund_request.job_deposit %>元</p>
<h2>退款理由：</h2>
<p><%= @refund_request.reason %></p>
<p>
  <% if @refund_request.submitted? %>
    <%= link_to '同意', agree_admins_refund_request_path(@refund_request), method: :put, class: 'btn btn-success', data: { disable_with: '提交中...' } %>
    <%= link_to '拒绝', refuse_admins_refund_request_path(@refund_request), method: :put, class: 'btn btn-danger', data: { disable_with: '提交中...' } %>
  <% else %>
    <h3>审批结果：<%= @refund_request.state_show %></h3>
  <% end %>
</p>
