<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>押金</th>
        <th>创建时间</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @refund_requests.each do |refund_request| %>
        <tr>
          <td><%= refund_request.job_title %></td>
          <td><%= refund_request.job_deposit %></td>
          <td><%= refund_request.job_created_at.localtime.to_date.to_s(:db) %></td>
          <td>
            <% if refund_request.submitted? %>
              <%= link_to '同意', agree_admins_refund_request_path(refund_request), method: :put, class: 'btn btn-success' %>
              <%= link_to '拒绝', refuse_admins_refund_request_path(refund_request), method: :put, class: 'btn btn-danger' %>
            <% else %>
              <%= refund_request.state_show %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
