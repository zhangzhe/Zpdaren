<br>
<ol class="breadcrumb">
  <li><%= link_to "职位列表", admins_jobs_path(:state => "in_hiring") %></li>
  <li>审核【<%= Job.find(params[:job_id]).title %>】的推荐</li>
</ol>
<%= render 'shared/page_title', title: '推荐列表' %>
<ul class="nav nav-tabs">
  <% active = (params[:state] == "submitted") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to "未审核<span class='badge'>#{recommended_deliveries.count}</span>".html_safe, admins_job_deliveries_path(:job_id => params[:job_id], :state => 'submitted') %>
  </li>
  <% active = (params[:state] == "approved") ? "active" : "" %>
  <li role="presentation" class="<%= active %>">
    <%= link_to "已审核<span class='badge'>#{approved_deliveries.count}</span>".html_safe, admins_job_deliveries_path(:job_id => params[:job_id], :state => 'approved') %>
  </li>
</ul>
<br>
<% if params[:state] == 'submitted' %>
  <%= render 'list', deliveries: recommended_deliveries %>
<% else %>
  <%= render 'list', deliveries: approved_deliveries %>
<% end %>
