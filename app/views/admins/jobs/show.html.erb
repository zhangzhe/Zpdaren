<ol class="breadcrumb">
  <li>
    <% if @job.in_hiring? %>
      <%= link_to '进行中的招聘', admins_jobs_path(:state => "in_hiring") %>
    <% else %>
      <%= link_to '已完成的招聘', admins_jobs_path(:state => "un_hiring") %>
    <% end %>
  </li>
  <li>
    查看职位信息
  </li>
</ol>

<div>
  <div class="col-md-5">
    <H2>
      <%= @job.title %>
    </H2 >
    <p>
      <%= @job.bonus %>元
    </p>
    <p>
      <%= @job.tag_list %>
    </p>
    <p>
      <%= simple_format @job.description %>
    </p>
    <%= link_to "修改职位信息", edit_admins_job_path(@job), class: "btn btn-primary" %>
  </div>

  <div class="col-md-5 col-md-offset-1">
    <H2>
      <%= @job.company.name %>
    </H2 >
    <p>
      <%= @job.company.mobile %>
    </p >
    <p>
      <%= simple_format @job.company.description %>
    </p>
  </div>
</div>
