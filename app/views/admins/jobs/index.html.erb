<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>标题</th>
        <th>简历数量</th>
        <th>红包</th>
        <th>创建时间</th>
        <th>操作/状态</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, edit_admins_job_path(job.id) %></td>
          <td><%= job.resumes.count %></td>
          <td><%= job.bonus %></td>
          <td><%= job.created_at.localtime.to_s(:db) %></td>
          <td>
            <% if job.deposit_paid? %>
              <%= link_to "审核", edit_admins_job_path(job.id), class: "btn btn-primary" %>
            <% elsif  %>
              <%= job.state %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
