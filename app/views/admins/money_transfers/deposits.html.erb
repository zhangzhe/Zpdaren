<%= render 'shared/page_title', title: '存款/提现确认' %>
<ul class="nav nav-tabs">
  <li role="presentation" class="active">
    <%= link_to '订金确认', deposits_admins_money_transfers_path %>
  </li>
  <li role="presentation">
    <%= link_to '尾款确认', final_payments_admins_money_transfers_path %>
  </li>
  <li role="presentation">
    <%= link_to '提现申请', withdraws_admins_money_transfers_path %>
  </li>
</ul>
<br>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>公司</th>
        <th>职位</th>
        <th>操作帐号</th>
        <th>金额</th>
        <th>转账时间</th>
        <th>状态/操作</th>
      </tr>
    </thead>
    <tbody>
      <% @deposits.each do |deposit| %>
        <tr>
          <td><%= deposit.job.company.name %></td>
          <td><%= deposit.job.try(:title) %></td>
          <td><%= deposit.wallet.user.email %></td>
          <td><%= deposit.amount %></td>
          <td><%= deposit.created_at.localtime.to_s(:db) %></td>
          <td>
            <% if deposit.submitted? %>
            <%= link_to "已收到", admins_money_transfer_path(deposit), class: "btn btn-primary btn-sm", method: :put, data: { disable_with: '提交中...' } %>
            <% else %>
              <%= deposit.state_show %>
            <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/paginate', objs: @deposits %>
