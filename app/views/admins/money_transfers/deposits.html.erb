<%= render 'shared/page_title', title: '存款/提现确认' %>
<%= render 'tab' %>
<br>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>公司</th>
        <th>职位</th>
        <th>操作帐号</th>
        <th>金额</th>
        <th>转账时间</th>
        <th>状态/操作</th>
      </tr>
    </thead>
    <tbody>
      <% @deposits.each do |deposit| %>
        <tr>
          <td><%= link_to deposit.job.company_name, 'javascript:void(0);', "data-toggle" => "popover", "data-trigger" => "focus", "data-placement" => "bottom", "data-content" => deposit.job.company_description %></td>
          <td><%= link_to deposit.job.title, 'javascript:void(0);', "data-toggle" => "popover", "data-trigger" => "focus", "data-placement" => "bottom", "data-content" => deposit.job.description %></td>
          <td><%= deposit.wallet.user.email %></td>
          <td><%= deposit.amount %></td>
          <td><%= deposit.created_at.localtime.to_s(:db) %></td>
          <td>
            <% if deposit.submitted? %>
            <%= button_to "已收到", admins_money_transfer_path(deposit), class: "btn btn-primary btn-sm", method: :put, data: { disable_with: '提交中...' } %>
            <% else %>
              <%= deposit.state_show %>
            <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/paginate', objs: @deposits %>
<%= render 'shared/popover' %>
