<%= render 'shared/page_title', title: '存款/提现确认' %>
<ul class="nav nav-tabs">
  <li role="presentation">
    <%= link_to '订金确认', deposits_admins_money_transfers_path %>
  </li>
  <li role="presentation">
    <%= link_to '尾款确认', final_payments_admins_money_transfers_path %>
  </li>
  <li role="presentation" class="active">
    <%= link_to '提现申请', withdraws_admins_money_transfers_path %>
  </li>
</ul>
<br>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>提现人</th>
        <th>支付宝账号</th>
        <th>金额</th>
        <th>申请时间</th>
        <th>状态/操作</th>
      </tr>
    </thead>
    <tbody>
      <% @withdraws.each do |withdraw| %>
        <tr>
          <td><%= withdraw.wallet.user.email %></td>
          <td><%= withdraw.zhifubao_account %></td>
          <td><%= withdraw.amount %></td>
          <td><%= withdraw.created_at.localtime.to_s(:db) %></td>
          <td><%= withdraw.state_show %>&nbsp;&nbsp;<%= button_to "已转账", admins_money_transfer_path(withdraw), class: "btn btn-primary btn-sm", method: :put, data: { disable_with: '提交中...' } if withdraw.submitted? %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/paginate', objs: @withdraws %>
