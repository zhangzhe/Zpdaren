<!DOCTYPE html>
<html lang="en">
  <%= render partial: "/shared/head" %>
  <body>
    <%= render partial: "/shared/navbar" %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <% active = active_for?(Suppliers::JobsController) %>
            <li class="<%= active %>"><%= link_to "我收到的职位", suppliers_jobs_path %></li>
            <% active = active_for?(Suppliers::ResumesController) %>
            <li class="<%= active %>"><%= link_to "我的简历", suppliers_resumes_path %></li>
            <% active = active_for?(Suppliers::DeliveriesController) %>
            <li class="<%= active %>"><%= link_to "我的推荐", suppliers_deliveries_path %></li>
            <% active = active_for?(Suppliers::UsersController) %>
            <li class="<%= active %>"><%= link_to "个人中心", suppliers_user_path(current_supplier) %></li>
            <% active = active_for?(Suppliers::DrawingsController) %>
            <li class="<%= active %>"><%= link_to "提现历史", suppliers_drawings_path %></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
<%= console unless Rails.env == "production" %>
