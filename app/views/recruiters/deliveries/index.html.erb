<div class="table-responsive">
  <% if params[:job_id] %>
    <ol class="breadcrumb">
      <li>
        <%= link_to '职位列表', recruiters_jobs_path %>
      </li>
      <li>
        <%= link_to truncate(@job.title), recruiters_job_path(@job) %>
      </li>
      <li class="active">推荐列表</li>
    </ol>
  <% end %>
  <table class="table table-striped">
    <thead>
      <tr>

        <th>被推荐人</th>
        <th>投递职位</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @deliveries.each do |delivery| %>
        <% if delivery.resume && delivery.resume.approved? %>
          <tr>
            <td>
              <% if delivery.refused? %>
                <s>
              <% end %>
              <% link_to_resume = link_to(delivery.candidate_brief, recruiters_delivery_path(delivery)) %>
              <% if delivery.unread? %>
                <strong><%= link_to_resume %></strong>
              <% else %>
                <%= link_to_resume %>
              <% end %>
              <% if delivery.refused? %>
                </s>
              <% end %>
            <td>
              <%= delivery.job_title %>
            </td>
            <td>
              <%= link_to '查看简历', recruiters_delivery_path(delivery), class: 'btn btn-primary active' unless (delivery.paid? || delivery.refused? || delivery.resume_paid_in_other_delivery?) %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
