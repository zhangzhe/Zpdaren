<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>标题</th>
        <th>简历数量</th>
        <th>红包</th>
        <th>创建时间</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.resumes.count %></td>
          <td><%= job.bonus %></td>
          <td><%= job.created_at.localtime.to_s(:db) %></td>
          <td>
            <%= Recruiters::JobsHelper::state_show(job) %>
            <%= link_to '支付', deposit_pay_new_recruiters_job_path(job), class: "btn btn-primary" if job.submitted? %>
            <%= link_to '完成', complete_recruiters_job_path(job), class: "btn btn-primary", method: :put if job.approved? %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to "发布新的职位", new_recruiters_job_path, class: "btn btn-primary btn-lg active", role: "button" %>
</p>