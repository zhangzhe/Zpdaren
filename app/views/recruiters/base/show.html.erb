<div>
  <div>
    <h3><%= current_recruiter.company.name %></h3>
    <p><%= current_recruiter.company.mobile %></p>
    <p><%= simple_format current_recruiter.company.description %></p>
    <p>
      <%= link_to "修改公司信息", edit_recruiters_company_path(current_recruiter.company), :class => "btn btn-primary" %>
    </p>
  </div>
</div>

<hr>

<div>
  <h3>公司账户</h3>
  <%= current_recruiter.wallet.money %>元
  <p>
    <%= link_to "提现到支付宝", new_withdraw_path, :class => "btn btn-primary" if current_recruiter.wallet.money > 0 %>
  </p>
</div>
