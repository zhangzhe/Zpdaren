<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>佣金</th>
        <th>创建时间</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @petitions.each do |petition| %>
        <tr>
          <td><%= petition.job_title %></td>
          <td><%= petition.job_bonus %></td>
          <td><%= petition.job_created_at.localtime.to_date.to_s(:db) %></td>
          <td><%= petition.state_show %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>