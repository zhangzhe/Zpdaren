<% content_for :title, "#{@job.title} - #{@job.company_name}" %>
<% content_for :job_info do %>
  <%= render 'shared/page_title', title: @job.title %>
  <div style="word-break:break-all;">
    <p>
      <% @job.tag_list.each do |tag| %>
        <i class="fa fa-tags"></i>
        <span class='gray-light'><%= tag %></span>
      <% end %>
    </p>
    <p>
      <%= render 'shared/salary_show', job: @job %>
    </p>
    <h4><%= @job.company_name %>提供&nbsp;<b><%= @job.bonus_for_entry %></b>&nbsp;元招聘红包</h4>
    <hr>
    <p><%= simple_format @job.description %></p>
    <hr>
    <h2>关于<%= @job.company_name %></h2>
    <blockquote>
      <%= simple_format @job.company_description %>
    </blockquote>
    <p>地址：<%= @job.company_address.present? ? @job.company_address : '暂未提供' %></p>
  </div>
<% end %>

<% content_for :other_job_info do %>
  <p>
    <div class="sidebar-module sidebar-module-inset">
      <h4>推荐简历，赢取红包</h4><br>
      <p>
        <%= link_to '上传简历', new_suppliers_resume_path(job_id: @job), class: 'btn btn-primary' %>
      </p>
    </div>
  </p>
  <hr>
  <p>
    <%= render "similar_jobs", similar_jobs: @similar_jobs %>
  </p>
<% end %>
