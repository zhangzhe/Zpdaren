<div class="row title">
  <div class="col-md-5 col-sm-5">
    <div class="input-group">
      <h2>
        <strong><%= title %></strong>
      </h2>
    </div>
  </div>
  <div class="col-md-7 col-sm-7">
    <%= search_form_for q, url: url do |f| %>
      <div class="input-group search">
        <%= hidden_field_tag :state, params[:state] if params[:state].present? %>
        <%= hidden_field_tag :supplier_id, params[:supplier_id] if params[:supplier_id].present? %>
        <%= hidden_field_tag :recruiter_id, params[:recruiter_id] if params[:recruiter_id] %>
        <%= hidden_field_tag :type, params[:type] if params[:type].present? %>
        <%= hidden_field_tag :job_id, params[:job_id] if params[:job_id] %>
        <%= f.search_field search_fields, class: 'form-control', placeholder: placeholder %>
        <span class="input-group-btn">
          <%= submit_tag '搜索', class: 'btn btn-default' %>
        </span>
      </div>
    <% end %>
  </div>
</div>
