<%= content_for :scripts do %>
  <%= javascript_include_tag "auto_complete_tags/jquery-tagsinput", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "auto_complete_tags/jquery-autocomplete", 'data-turbolinks-track' => true %>

  <script>
    $(function(){
      $('.auto-tags').tagsInput({
        'autocomplete_url': '/tags',
        'autocomplete': {
          'selectFirst': false,
          'width': '374px',
          'autoFill': false,
          'noRecord': ''
        },
        'defaultText':'职位标签(必填)',
        'width': '100%',
        'min-height': '42px',
        'height': 'auto',
        'max': 5,
        'maxChars': 20
      });
    });
  </script>
<% end %>
