<div class="container">
  <br>
  <%= bootstrap_flash %>
  <div class="col-sm-6 col-md-6 col-md-offset-3">
    <div class="account-wall">
      <%= form_for(resource, as: resource_name, url: eval("#{resource_name.to_s}_password_path"), html: { method: :post, class: "form-signin" }) do |f| %>
        <h2 class="text-center">请输入您的注册邮箱地址，我们会发给您重置密码链接</h2>
        <%= devise_error_messages! %>

        <div class="form-group">
          <p class="form-control-static"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %></p>
        </div>
        <%= f.submit "发送确认邮件", :class => "btn btn-default btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
