<div class="container">
  <br>
  <%= bootstrap_flash %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
    <h2>修改密码</h2>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "新密码" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "新密码确认" %>
    </div>

    <div class="actions">
      <%= f.submit "确认", :class => "btn btn-default" %>
    </div>
  <% end %>
</div>
