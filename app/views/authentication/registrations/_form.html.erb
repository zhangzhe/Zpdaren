<div class="container">
  <br>
  <%= bootstrap_flash %>
  <div class="col-sm-6 col-md-6 col-md-offset-3">
    <div class="account-wall">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% name = (resource_name == "recruiter") ? "招聘方" : "推荐方" %>
        <h2 class="text-center"><%= name %>注册</h2>
        <br>
        <%= devise_error_messages! %>
        <%= f.email_field :email, autofocus: true, :class => "form-control input-lg", :placeholder => "邮箱" %>
        <br>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :placeholder => "密码" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-lg", :placeholder => "密码确认" %>
        <br>
        <%= f.submit "注册", :class => "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
