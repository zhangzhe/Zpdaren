<div class="container">
  <br>
  <%= bootstrap_flash %>
  <div class="col-sm-6 col-md-6 col-md-offset-3">
    <div class="account-wall">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% name = "管理员" if (resource_name.to_s == "admin") %>
      <h2 class="text-center"><%= name %>用户登录</h2>
      <br>
      <%= f.email_field :email, autofocus: true, :class => "form-control input-lg", :placeholder => "邮箱" %><br>

      <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :placeholder => "密码" %>
      <br>
      <%= f.submit "登录", :class => "btn btn-default btn-lg btn-block btn-primary" %>
      <% unless resource_name.to_s == "admin" %>
        <br>
        <%= link_to "忘记密码?", forget_password_path_for("user") %>&nbsp;&nbsp;|&nbsp;&nbsp;
        还没有账号？<%= link_to "注册", home_path %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
